@model Items
@{
    ViewData["Title"] = "Delete";
}

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-3">
            <h1 class="text-outline-success">Delete Item</h1>
            <hr />
        </div>
       
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control" />
        
        </div>
        <div class="mb-3">
            <label asp-for="Price"></label>
            <input asp-for="Price" disabled class="form-control" />
        

        </div> 
        <div class="mb-3">
            <label asp-for="CreatedDate"></label>
            <input asp-for="CreatedDate" disabled class="form-control" />

        </div>
        <div>
            <label asp-for="CategoryId"></label>
            <select asp-for="CategoryId" class="form-select" disabled asp-items=@ViewBag.Category>
            </select>
        </div>
        <br />
        <hr />

        <button type="submit" class="btn btn-outline-success " style="width:150px">Delete</button>
        <a asp-controller="Items" asp-action="Index" class="btn btn-outline-danger">
            Back To Items
        </a>
    </div>
</form>


